{
  "name": "@tickets/auth",
  "version": "0.0.1",
  "packageManager": "yarn@3.5.1",
  "private": true,
  "main": "dist",
  "types": "dist",
  "author": "mrlucciola",
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "mongoose": "^7.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1",
    "@types/express": "^4",
    "@types/node": "^18.16.3",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "env": {
    "srv_name": "auth",
    "author": "mrlucciola"
  },
  "scripts": {
    "build": "tsc -b",
    "start": "nodemon --exec ts-node ./src/index.ts",
    "d:img": "docker build -t mrlucciola/auth:latest -t mrlucciola/auth:$npm_package_version ../.. --file Dockerfile",
    "k:up": "kubectl apply -f k8s/*.yaml",
    "k:down": "kubectl delete -f k8s/*.yaml",
    "k:exec": "kubectl exec -it $(kubectl get pods | awk -v var=\"auth\" -F' ' '$0~var{print $1}') sh",
    "k:restart": "kubectl rollout restart deployment auth-depl"
  }
}
